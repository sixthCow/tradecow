# Bitcoin Maximalist Trading Agent Configuration
# Copy this to .env and fill in your actual API key

# Recall API Configuration
RECALL_API_KEY=your_api_key_here

# Optional: Use sandbox for testing (default) or production for competitions
# RECALL_BASE_URL=https://api.sandbox.competitions.recall.network
# RECALL_BASE_URL=https://api.competitions.recall.network

# Agent Configuration
BTC_REBALANCE_THRESHOLD=0.05  # 5% drift threshold before rebalancing
BTC_MIN_TRADE_VALUE=10        # Minimum $10 trade to avoid dust trades
BTC_TARGET_ETHEREUM=0.40      # 40% allocation on Ethereum
BTC_TARGET_ARBITRUM=0.25      # 25% allocation on Arbitrum  
BTC_TARGET_OPTIMISM=0.20      # 20% allocation on Optimism
BTC_TARGET_BASE=0.15          # 15% allocation on Base

# Logging
LOG_LEVEL=INFO